@model IEnumerable<WatchlistApp.Models.WatchItem>

@{
    ViewData["Title"] = "Watchlist";
}

<h1>Список для просмотра</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Добавить</a>
</p>

@foreach (var group in Model.GroupBy(w => w.Status))
{
        <h3>@group.Key</h3>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Название</th>
                    <th>Тип</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in group)
            {
                    <tr>
                        <td>@item.Title</td>
                        <td>@item.Type</td>
                        <td>
                            <a class="btn btn-sm btn-info" asp-action="Edit" asp-route-id="@item.Id">Изменить</a>
                            <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                        </td>
                    </tr>
            }
            </tbody>
        </table>
}
